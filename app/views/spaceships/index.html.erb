<div class="spaceships-index-body" data-controller="animated-stars-js">
  <h1 class= "text-center page-title title-properties">All our available spaceships</h1>
  <%# faire des colonnes  %>

  <div class="container justify-content-center d-flex">
    <%#  dans la div organiser les cards avec col etc %>
    <div class= "row d-flex justify-content-around">
      <% @spaceships.each do |spaceship| %>
          <div class= "index-card position-relative">
            <%= link_to spaceship_path(spaceship) do %>
              <img src="<%= cl_image_path spaceship.photos.first.key%>", alt="...">
              <div class= "index-card-content">
                <div>
                  <p class="card-title"><strong><%= spaceship.name %></strong></p>
                  <p class="card-text"><%= spaceship.address %></p>
                </div>
              </div>
              <p class="position-absolute" style="bottom: 0px; right: 10px; color: purple"><strong><%= spaceship.price %>â‚¬/day</strong></p>
            <%end%>
          </div>
      <% end %>
    </div>
  </div>
</div>

<div class="spaceships-index-body" data-controller="animated-stars-js">
  <h1 class= "text-center page-title title-properties">All our available spaceships</h1>
  <%# faire des colonnes  %>

  <div class="spaceship-cards container justify-content-center ">
    <%#  dans la div organiser les cards avec col etc %>
    <div class= "row d-flex justify-content-around">
      <% @spaceships.each do |spaceship| %>
        <div class="card col-4-lg p-0 m-3 shadow" style="width: 18rem;">
          <img src="<%= cl_image_path spaceship.photos.first.key %>" class="card-img-top" alt="...">
          <div class="card-body d-flex flex-column justify-content-between">
            <div>
              <p class="card-title"><strong><%= spaceship.name %></strong></p>
              <p class="card-text"><%= spaceship.address %></p>
              <p><%= spaceship.price %>â‚¬/day</p>
            </div>
            <%= link_to "See More/Book", spaceship_path(spaceship), class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
